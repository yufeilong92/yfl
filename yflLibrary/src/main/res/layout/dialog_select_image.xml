<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_select_image_takePrice"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="拍照"
        android:textColor="@color/text_main_bg"
        android:textSize="16sp" />

    <View style="@style/line_height_1" />

    <TextView
        android:id="@+id/dialog_select_image_fromPhoto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center"
        android:text="从手机相册选择"
        android:textColor="@color/text_main_bg"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dialog_select_image_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/line_one"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/text_main_bg"
        android:textSize="15sp" />
</LinearLayout>