<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:background="@drawable/gm_15_top_gray"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/text_14_main"
            android:text="日期选择" />

        <ImageView
            android:id="@+id/iv_recharge_close"
            android:layout_width="@dimen/dp_48"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:scaleType="center"
            android:src="@mipmap/ic_back" />
    </RelativeLayout>
    <com.backpacker.yflLibrary.view.calendar.CalendarPickerView
        android:layout_width="match_parent"
        android:id="@+id/calendar_view"
        android:clipToPadding="false"
        android:scrollbarStyle="outsideOverlay"
        android:layout_height="300dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_16"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="确认"
            android:gravity="center"
            android:id="@+id/tv_select_time_sure"
            android:textColor="@color/white"
            android:textSize="@dimen/text_15"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/gm_30_green"
            android:layout_height="@dimen/dp_48"/>
    </FrameLayout>

</LinearLayout>