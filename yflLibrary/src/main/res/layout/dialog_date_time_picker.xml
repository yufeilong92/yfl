<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootviewtimepicek"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dialog_time_picker_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="50dp"
            android:minHeight="40dp"
            android:text="取消"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minWidth="50dp"
            android:text="确定"
            android:textColor="#2391E9"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/view_line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DCDCDC"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_dialog_multiple_cancle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.backpacker.yflLibrary.view.dialog.TimePicker.LoopView
            android:id="@+id/loop_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_dividerTextColor="#87CEFA"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="年"
            android:textSize="13sp" />

        <com.backpacker.yflLibrary.view.dialog.TimePicker.LoopView
            android:id="@+id/loop_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_dividerTextColor="#87CEFA"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="月"
            android:textSize="13sp" />

        <com.backpacker.yflLibrary.view.dialog.TimePicker.LoopView
            android:id="@+id/loop_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_dividerTextColor="#87CEFA"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="日"
            android:textSize="13sp" />

        <com.backpacker.yflLibrary.view.dialog.TimePicker.LoopView
            android:id="@+id/loop_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_dividerTextColor="#87CEFA"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="时"
            android:textSize="13sp" />

        <com.backpacker.yflLibrary.view.dialog.TimePicker.LoopView
            android:id="@+id/loop_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:awv_centerTextColor="#1E90FF"
            app:awv_dividerTextColor="#87CEFA"
            app:awv_isLoop="false"
            app:awv_textsize="13" />

        <TextView
            android:id="@+id/tv_dialog_time_picker_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="分"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>